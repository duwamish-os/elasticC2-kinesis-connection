{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Streaming consumer api VM",
  "Parameters": {
    "environment": {
      "Type": "String",
      "Default": "staging",
      "Description": "environment"
    },
    "vpcId": {
      "Type": "String",
      "Default": "vpc-6207ff07",
      "Description": "Virtual Private Cloud"
    },
    "subnetwork": {
      "Type": "String",
      "Default": "subnet-d67baeb3",
      "Description": "Subnet Id"
    },
    "keyName": {
      "Type": "String",
      "Default": "streaming-server",
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the web server"
    },
    "apiPort": {
      "Type": "Number",
      "Default": 80
    },
    "userId": {
      "Type": "String",
      "Default": "033814027302",
      "Description": "user id"
    },
    "healthResource": {
      "Type": "String",
      "Default": "restapi/health",
      "Description": "Health resource"
    }
  },
  "Resources": {
    "ConsumerStreamAccessPolicyUat": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": "kinesis:*",
              "Resource": "arn:aws:kinesis:us-west-2:500238854089:stream/a0135-*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:BatchGetItem",
                "dynamodb:BatchWriteItem",
                "dynamodb:CreateTable",
                "dynamodb:DeleteItem",
                "dynamodb:DeleteTable",
                "dynamodb:DescribeLimits",
                "dynamodb:DescribeReservedCapacity",
                "dynamodb:DescribeReservedCapacityOfferings",
                "dynamodb:DescribeStream",
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:GetRecords",
                "dynamodb:GetShardIterator",
                "dynamodb:ListStreams",
                "dynamodb:ListTables",
                "dynamodb:PutItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:UpdateItem",
                "dynamodb:UpdateTable"
              ],
              "Resource": "arn:aws:dynamodb:us-west-2:500238854089:table/a0135-*"
            }
          ]
        },
        "PolicyName": "a0135-ConsumerStreamAccessPolicyUat",
        "Roles": [
          {
            "Ref": "StreamingConsumerAccessRoleUat"
          }
        ]
      }
    },
    "StreamingConsumerAccessRoleUat": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "a0135-StreamingConsumerAccessRoleUat",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/a0135/"
      }
    },
    "ConsumerAPIFirewallUat": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Security group for the Consumer-API",
        "Tags": [
          {
            "Key": "Name",
            "Value": "ConsumerApiFirewallUat"
          }
        ],
        "VpcId": "vpc-6207ff07",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "10.0.0.0/8"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "10.0.0.0/8"
          }
        ]
      }
    },
    "StreamingConsumerVMProfileUat": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/a0135/",
        "InstanceProfileName": "a0135-StreamingConsumerVMProfileUat",
        "Roles": [
          "a0135-StreamingConsumerAccessRoleUat"
        ]
      }
    },
    "StreamingConsumerVMUat": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": "a0135-consumer-api-uat"
          },
          {
            "Key": "Owner",
            "Value": "a0135"
          }
        ],
        "ImageId": "ami-6f68cf0f",
        "KeyName": "streaming-server",
        "InstanceType": "t2.large",
        "SecurityGroupIds": [
          {
            "Ref": "ConsumerAPIFirewallUat"
          }
        ],
        "SubnetId": "subnet-d67baeb3",
        "IamInstanceProfile": {
          "Ref": "StreamingConsumerVMProfileUat"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash -xe\n",
                "yum install -y aws-cfn-bootstrap\n",
                "date > /home/ec2-user/starttime\n",
                "# Install the files and packages from the metadata\n",
                "/opt/aws/bin/cfn-init -v ",
                "         --stack ",
                {
                  "Ref": "AWS::StackName"
                },
                "         --resource StreamingConsumerVMUat ",
                "         --region ",
                {
                  "Ref": "AWS::Region"
                },
                "\n"
              ]
            ]
          }
        }
      },
      "Metadata": {
        "AWS::CloudFormation::Init": {
          "configSets": {
            "initialise-jvm": [
              "jvm-setup"
            ]
          },
          "jvm-setup": {
            "commands": {
              "root access": {
                "command": "sudo su -"
              },
              "yum update": {
                "command": "yum -y update"
              },
              "install-wget": {
                "command": "yum -y install wget"
              }
            }
          }
        }
      }
    },
    "consumerApiLBUat": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "SecurityGroups": [
          {
            "Ref": "ConsumerAPIFirewallUat"
          }
        ],
        "Subnets": [
          {
            "Ref": "subnetwork"
          }
        ],
        "Scheme": "internal",
        "Instances": [
          {
            "Ref": "StreamingConsumerVMUat"
          }
        ],
        "Listeners": [
          {
            "LoadBalancerPort": "80",
            "InstancePort": {
              "Ref": "apiPort"
            },
            "Protocol": "HTTP"
          }
        ],
        "HealthCheck": {
          "Target": {
            "Fn::Join": [
              "",
              [
                "HTTP:",
                {
                  "Ref": "apiPort"
                },
                "/",
                {
                  "Ref": "healthResource"
                }
              ]
            ]
          },
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "5",
          "Interval": "30",
          "Timeout": "5"
        }
      }
    }
  }
}
